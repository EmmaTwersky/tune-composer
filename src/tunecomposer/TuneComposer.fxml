<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="scrollPane" 
            stylesheets="@TuneComposer.css" 
            xmlns="http://javafx.com/javafx/8" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tunecomposer.FXMLController">
    <top>
        <MenuBar fx:id="menuBar" 
                 prefHeight="29.0" 
                 prefWidth="2000">
          <menus>
            <Menu fx:id="menuFile" 
                  text="File">
              <items>
                <MenuItem fx:id="menuItemExit" 
                          onAction="#handleExitMenuItemAction" 
                          text="Exit" 
                          accelerator="Shortcut+Q" >
                </MenuItem>
              </items>
            </Menu>
            <Menu fx:id="menuEdit" 
                  text="Edit">
               <items>
                  <MenuItem fx:id="menuItemSelectAll"
                            onAction="#handleSelectAllMenuItemAction"  
                            text="Select All" 
                            accelerator="Shortcut+A" >
                  </MenuItem>
                  <MenuItem fx:id="menuIemDelete" 
                            onAction="#handleDeleteMenuItemAction"  
                            text="Delete" 
                            accelerator="Shortcut+Backspace" >
                  </MenuItem>
               </items>
            </Menu>
              <Menu fx:id="menuActions" 
                    text="Actions">
                <items>
                  <MenuItem fx:id="menuItemPlay" 
                            onAction="#handlePlayScaleButtonAction" 
                            text="Play" 
                            accelerator="Shortcut+P" >
                  </MenuItem>
                  <MenuItem fx:id="menuItemStop" 
                            onAction="#handleStopPlayingButtonAction" 
                            text="Stop" 
                            accelerator="Shortcut+S" >
                  </MenuItem>
                </items>
              </Menu>
          </menus>
        </MenuBar>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane2" 
                    prefHeight="1280.0" 
                    prefWidth="2000.0">
            <content>
                <Pane fx:id="compositionPane" 
                      onMousePressed="#handleCompPanePressed"
                      prefHeight="1280" 
                      prefWidth="2000" 
                      BorderPane.alignment="CENTER" />
            </content>
        </ScrollPane>
    </center>
   <left>
      <fx:define>
        <ToggleGroup fx:id="instrumentSelection"/>
      </fx:define>
      <ToolBar fx:id="toolBar" 
               orientation="VERTICAL" 
               prefHeight="1280.0" 
               prefWidth="150.0" 
               BorderPane.alignment="CENTER">
        <items>
            <RadioButton fx:id="Piano" 
                         onAction="#handleInstrumentMenuAction" 
                         mnemonicParsing="false" 
                         styleClass="radioButtonPiano" 
                         text="Piano"
                         toggleGroup="$instrumentSelection"
                         selected = "true">
               <padding>
                  <Insets top="10.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="Harpsichord" 
                         onAction="#handleInstrumentMenuAction" 
                         layoutX="10.0" 
                         layoutY="15.0" 
                         mnemonicParsing="false" 
                         styleClass="radioButtonHarpsichord" 
                         text="Harpsichord"
                         toggleGroup="$instrumentSelection">
               <padding>
                  <Insets top="30.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="Marimba" 
                         onAction="#handleInstrumentMenuAction" 
                         layoutX="20.0" layoutY="25.0" 
                         mnemonicParsing="false" 
                         styleClass="radioButtonMarimba" 
                         text="Marimba"
                         toggleGroup="$instrumentSelection">
               <padding>
                  <Insets top="30.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="Organ" 
                         onAction="#handleInstrumentMenuAction" 
                         layoutX="30.0" 
                         layoutY="35.0" 
                         mnemonicParsing="false" 
                         styleClass="radioButtonOrgan" 
                         text="Organ"
                         toggleGroup="$instrumentSelection">
               <padding>
                  <Insets top="30.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="Accordion" 
                         onAction="#handleInstrumentMenuAction" 
                         layoutX="40.0" 
                         layoutY="45.0" 
                         mnemonicParsing="false" 
                         styleClass="radioButtonAccordion" 
                         text="Accordion"
                         toggleGroup="$instrumentSelection">
               <padding>
                  <Insets top="30.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="Guitar" 
                         onAction="#handleInstrumentMenuAction" 
                         layoutX="50.0" 
                         layoutY="55.0" 
                         mnemonicParsing="false" 
                         styleClass="radioButtonGuitar" 
                         text="Guitar"
                         toggleGroup="$instrumentSelection">
               <padding>
                  <Insets top="30.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="Violin" 
                         onAction="#handleInstrumentMenuAction" 
                         layoutX="60.0" 
                         layoutY="65.0" 
                         mnemonicParsing="false" 
                         styleClass="radioButtonViolin" 
                         text="Violin"
                         toggleGroup="$instrumentSelection">
               <padding>
                  <Insets top="30.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="FrenchHorn" 
                         onAction="#handleInstrumentMenuAction" 
                         layoutX="70.0" 
                         layoutY="75.0" 
                         mnemonicParsing="false" 
                         styleClass="radioButtonFrenchHorn" 
                         text="French Horn"
                         toggleGroup="$instrumentSelection">
               <padding>
                  <Insets top="30.0" />
               </padding>
            </RadioButton>
        </items>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </ToolBar>
   </left>
</BorderPane>
