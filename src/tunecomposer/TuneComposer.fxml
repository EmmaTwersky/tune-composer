<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane stylesheets="@TuneComposer.css" 
            xmlns="http://javafx.com/javafx/8" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tunecomposer.MenuController">
    <top>
        <MenuBar>
          <menus>
            <Menu text="File">
              <items>
                <MenuItem onAction="#handleExitMenuItemAction" 
                          text="Exit" 
                          accelerator="Shortcut+Q" >
                </MenuItem>
              </items>
            </Menu>
            <Menu text="Edit">
               <items>
                  <MenuItem onAction="#handleSelectAllMenuItemAction"  
                            text="Select All" 
                            accelerator="Shortcut+A" >
                  </MenuItem>
                  <MenuItem onAction="#handleDeleteMenuItemAction"  
                            text="Delete" 
                            accelerator="Shortcut+Backspace" >
                  </MenuItem>
               </items>
            </Menu>
              <Menu text="Actions">
                <items>
                  <MenuItem onAction="#handlePlayScaleButtonAction" 
                            text="Play" 
                            accelerator="Shortcut+P" >
                  </MenuItem>
                  <MenuItem onAction="#handleStopPlayingButtonAction" 
                            text="Stop" 
                            accelerator="Shortcut+S" >
                  </MenuItem>
                </items>
              </Menu>
          </menus>
        </MenuBar>
    </top>
    <center>
        <fx:include fx:id="compositionPane" source="CompositionPane.fxml"/>
    </center>
   <left>
        <fx:include fx:id="instrumentToolBar" source="InstrumentToolBar.fxml"/>
   </left>
</BorderPane>
