<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane 
    prefHeight = "600.0" 
    prefWidth = "900.0" 
    stylesheets = "@TuneComposer.css" 
    xmlns = "http://javafx.com/javafx/8.0.111" 
    xmlns:fx = "http://javafx.com/fxml/1"
    fx:controller = "tunecomposer.ApplicationController">
    <top>
        <MenuBar>
            <menus>
                <Menu text = "File">
                    <items>
                        <MenuItem 
                            text = "Exit" 
                            onAction = "#handleExitMenuItemAction" 
                            accelerator = "Shortcut+Q" >
                        </MenuItem>
                    </items>
                </Menu>
                <Menu text = "Edit">
                    <items>
                        <SeparatorMenuItem>
                        </SeparatorMenuItem>
                        <MenuItem 
                            text = "Delete" 
                            onAction = "#handleDeleteMenuItemAction"  
                            accelerator = "Shortcut+Backspace" >
                        </MenuItem>
                        <MenuItem 
                            text = "Select All" 
                            onAction = "#handleSelectAllMenuItemAction"  
                            accelerator = "Shortcut+A" >
                        </MenuItem>
                        <SeparatorMenuItem>
                        </SeparatorMenuItem>
                        <MenuItem 
                            text = "Group" 
                            onAction = "#handleGrouping"  
                            accelerator = "Shortcut+G" >
                        </MenuItem>
                        <MenuItem 
                            text = "Ungroup" 
                            onAction = "#handleUngrouping"  
                            accelerator = "Shortcut+SHIFT+G" >
                        </MenuItem>
                    </items>
                </Menu>
                <Menu text = "Actions">
                    <items>
                        <MenuItem 
                            text = "Play" 
                            onAction = "#handlePlayScaleButtonAction" 
                            accelerator = "Shortcut+P" >
                        </MenuItem>
                        <MenuItem
                            text = "Stop" 
                            onAction = "#handleStopPlayingButtonAction" 
                            accelerator = "Shortcut+S" >
                        </MenuItem>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <fx:include 
            fx:id = "compositionPane" 
            source = "CompositionPane.fxml" />
    </center>
    <left>
        <fx:include 
            fx:id = "instrumentToolBar" 
            source = "InstrumentToolBar.fxml" />
    </left>
</BorderPane>